@model TicketService.DAL.Models.Venue

<h4>Venue</h4>
<hr />
<div class="d-flex">
    <div class="m-2">
        <a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="Index">< cancel</a>
    </div>
    <div class="m-2">
        <form asp-action="EditVenue">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.Id);
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityId" class="control-label"></label>
                <select class="form-control" asp-for="CityId" asp-items="ViewBag.Cities"></select>
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


