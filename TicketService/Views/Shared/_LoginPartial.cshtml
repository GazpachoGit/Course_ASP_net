@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item"><a class="nav-link" href="/#!/MyTickets/Selling">@Localizer["MyTickets"]</a></li>
    <li class="nav-item"><a class="nav-link" href="/#!/MyOrders/Confirmed">@Localizer["MyOrders"]</a></li>
   @* <li class="nav-item"><span class=" navbar-text">Hello,  @User.Identity.Name</span></li>*@


    <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="User" asp-action="Logout">@Localizer["Logout"]</a>
    </li>

    @if (User.IsInRole(Roles.Administrator))
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">@Localizer["Admin"]</a>
        </li>
    }
    else
    {
        <li class="nav-item"><a class="nav-link" href="#">@Localizer["UserInfo"]</a></li>
    }
}
else
{

    <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="User" asp-action="Login">@Localizer["Login"]</a>
    </li>
}

