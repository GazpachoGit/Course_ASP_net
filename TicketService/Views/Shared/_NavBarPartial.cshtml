@using TicketService.DAL.Models
@inject IViewLocalizer Localizer
 
@if (User.Identity.IsAuthenticated)
{
<li class="nav-item">
    <a class="nav-link" asp-area="" asp-controller="MyTickets" asp-action="Index">@Localizer["MyTickets"]</a>
</li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="MyOrders" asp-action="Index">@Localizer["MyOrders"]</a>
